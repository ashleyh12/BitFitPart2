<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="16dp"
    >


    <LinearLayout
        android:id="@+id/food1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/food_hdr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food:"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/food_ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Food Name"
            android:textSize="18sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calorie1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/food1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/calorie_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/cal_ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Calories"
            android:inputType="number"
            android:textSize="18sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/calorie1"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Record this food"
            android:textSize="20sp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:textStyle="bold"

            />
    </LinearLayout>


</RelativeLayout>