<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SummaryFragment">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:padding="8dp"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Date: "
            android:textSize="20sp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:text="Average Calories: "
            android:textSize="20sp"
            android:layout_alignParentStart="true"
             />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:text="Minimum Calories: "
            android:textSize="20sp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:text="Maximum Calories: "
            android:textSize="20sp"
            android:layout_alignParentStart="true" />

        <!--  VAL   -->

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9/19/22"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/avg_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/date"/>

        <TextView
            android:id="@+id/min_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/avg_cal" />

        <TextView
            android:id="@+id/max_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/min_cal" />
    </RelativeLayout>


    <com.jjoe64.graphview.GraphView
        android:id="@+id/idGraphView"
        android:layout_below="@id/layout1"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        />

</RelativeLayout>